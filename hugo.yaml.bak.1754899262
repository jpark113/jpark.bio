baseURL: "https://jpark.bio/"
languageCode: "en-us"
title: "James Park"

# PaperMod via Hugo Modules
theme:
  - github.com/adityatelange/hugo-PaperMod
module:
  imports:
    - path: github.com/adityatelange/hugo-PaperMod

  defaultTheme: auto
  ShowReadingTime: true
  ShowShareButtons: true




# Force HTML at home so GitHub Pages has "/" index.html
outputs:
  home: ["HTML","RSS","JSON"]
  section: ["HTML","RSS"]
  page: ["HTML"]
  taxonomy: ["HTML","RSS"]
  term: ["HTML","RSS"]

baseURL: "https://jpark.bio/"
enableRobotsTXT: true

# Global menu
menu:
  main:
    - name: Profile
      url: /
      weight: 10
    - name: Blog
      url: https://jampkd.bearblog.dev/
      weight: 20
      params: { external: true }
    - name: Contact
      url: /contact/
      weight: 30
    - name: CV
      url: /cv/
      weight: 40

  ShowShareButtons: false

  assets:
    customCSS:
      - css/custom-footer.css


params:
  ShowShareButtons: false
  images: ["/images/profile.jpg"]   # default OpenGraph image (update file if you change photo)
  assets:
    css:
      - css/extended/profile-twocol.css


menus:
  main:
    - name: Profile
      url: /
      weight: 10
    - name: Blog
      url: https://jampkd.bearblog.dev/
      weight: 20
      params:
        external: true
    - name: Contact
      url: /contact/
      weight: 30
    - name: CV
      url: /cv/
      weight: 40
